{
	admin off
  auto_https off
  http_port 8080
}

localhost:8080 {
	root * /usr/share/caddy

	log {
		output stdout
	}

	header Cache-Control "no-store"

	respond /healthcheck 200

	file_server {
		disable_canonical_uris
	}
}

corybuecker.com:8080 {
	root * /usr/share/caddy

	encode gzip

	log {
		output stdout
		format json
	}

	header Content-Security-Policy "default-src 'none'; img-src 'self'; script-src 'self' 'nonce-T8rupwLr3WhNwg' https://ga.jspm.io; connect-src 'self' https://exlytics.corybuecker.com https://ga.jspm.io; style-src 'self'; frame-ancestors 'none'; base-uri 'none'; form-action 'self'"
	header Referrer-Policy "strict-origin-when-cross-origin"
	header X-Content-Type-Options "nosniff"

	header Cache-Control "no-store"

	handle /css/* {
		header Cache-Control "public, immutable, max-age=31536000"
	}

	handle /js/* {
		header Cache-Control "public, immutable, max-age=31536000"
	}

	respond /healthcheck 200

	file_server {
		disable_canonical_uris
	}
}
